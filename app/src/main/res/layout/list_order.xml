<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="14dp"
            android:layout_toStartOf="@+id/autofitTextView"
            android:src="@mipmap/ic_location" />

        <me.grantland.widget.AutofitTextView
            android:id="@+id/textAddress"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="14dp"
            android:layout_toEndOf="@+id/imageView2"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="Ermin Garcia St. Cubao Quezon City"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            app:minTextSize="8sp"
            app:sizeToFit="true" />

        <me.grantland.widget.AutofitTextView
            android:id="@+id/autofitTextView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textAddress"
            android:layout_centerHorizontal="true"
            android:maxLines="1"
            android:text="Jhomari Asinas"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:minTextSize="8sp"
            app:sizeToFit="true" />

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button2"
            android:layout_alignBottom="@+id/button2"
            android:layout_alignEnd="@+id/textAddress"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/cantora_one"
            android:text="VIEW ON MAP"
            android:textColor="@android:color/holo_blue_dark" />

        <Button
            android:id="@+id/button2"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imageView2"
            android:layout_below="@+id/autofitTextView"
            android:layout_marginStart="35dp"
            android:fontFamily="@font/cantora_one"
            android:text="VIEW DETAILS"
            android:textColor="@android:color/holo_green_dark" />


    </RelativeLayout>

</android.support.v7.widget.CardView>