<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp"
    android:layout_marginRight="7dp"
    android:layout_marginLeft="7dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgProd"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/ic_location" />

        <me.grantland.widget.AutofitTextView
            android:id="@+id/prodName"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/imgProd"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/imgProd"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="Cheese Burger"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:minTextSize="10sp"
            app:sizeToFit="true" />

        <TextView
            android:id="@+id/prodAmount"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/imgProd"
            android:layout_alignStart="@+id/prodName"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="$1000.0000"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />



    </RelativeLayout>

</android.support.v7.widget.CardView>